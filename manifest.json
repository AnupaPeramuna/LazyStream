{
  "manifest_version": 3,
  "name": "LazyStream",
  "description": "Extension to automate skipping intros,recaps and outro on Netflix",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": ["https://www.netflix.com/watch/*"],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
